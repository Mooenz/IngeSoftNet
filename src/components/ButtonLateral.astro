---
import WhatsApp from '@assets/icons/logo-whatsApp.astro';
import imgISL from '@assets/logo-isl.png';
import Chat from '@components/Chat.astro';
import { Image } from 'astro:assets';
const base = import.meta.env.BASE_URL;
const classIcon = 'relative rounded-full flex items-center justify-center w-12 h-12 md:w-14 md:h-14 lg:w-16 lg:h-16 shadow-md group';
const tooltipClass =
	"absolute right-[calc(100%+1rem)] group-hover:right-[calc(100%+0.8rem)] top-1/2 transform -translate-y-1/2 text-text py-2 px-4 bg-white rounded-xl whitespace-nowrap before:content-[''] before:absolute before:top-1/2 before:right-[-9px] before:-translate-y-1/2 before:border-[5px] before:border-solid before:border-transparent before:z-10 before:border-l-white group-hover:opacity-100 opacity-0 transition-all duration-300 semibold tooltip-shadow font-semibold pointer-events-none";
---

<div class="fixed bottom-2 right-2 md:bottom-4 md:right-4 lg:bottom-6 lg:right-6 flex flex-col gap-3 lg:gap-4 z-50">
	<a class={`${classIcon} bg-white text-white`} href={`${base}downloads/ISLQS.zip`} download="ISLQS.zip" aria-label="Descargar instalador ISL">
		<Image class="max-w-[20px] lg:max-w-[30px]" src={imgISL} alt="Descargar instalador ISL" width={512} height={512} loading="lazy" title="Image logo ISL" />
		<span class={tooltipClass}> Descargar instalador ISL</span>
	</a>

	<Chat classIcon={classIcon} tooltipClass={tooltipClass} />

	<a class={`${classIcon} bg-[#25D366] text-white `} href="https://api.whatsapp.com/send/?phone=573222282928&text=Hola%21+%0D%0ADeseo+mas+informaci%C3%B3n+sobre+Servicios+de+IngeSoftNet" target="_blank" rel="noopener noreferrer" aria-label="Estamos en línea">
		<WhatsApp />
		<span class={tooltipClass}>Estamos en línea</span>
	</a>
</div>

<style>
	.tooltip-shadow {
		box-shadow: 0 0 40px 0 rgba(0, 0, 0, 0.1);
	}
</style>
