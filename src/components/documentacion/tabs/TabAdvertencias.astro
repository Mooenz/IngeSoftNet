import img17 from '@assets/images/eliminar-errores1.png';
import img18 from '@assets/images/imputacion-contable.png';
import img19 from '@assets/images/imputacion-contable1.png';
import img20 from '@assets/images/impresora-predeterminada.png';
import img21 from '@assets/images/impresora-predeterminada1.png';
import img22 from '@assets/images/impresora-predeterminada2.png';
