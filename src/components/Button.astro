---
export interface Props {
	anchor: boolean;
	link: string;
	title?: string;
	variants: string;
	size: string;
	className?: string;
	callBack?: () => void;
}

const { anchor, link, title, variants, size, className, callBack } = Astro.props;

const variantsObject = {
	primary: {
		class: 'relative block border-4 border-transparent text-base font-semibold text-white rounded-[100px] shadow-[0_0_0_2px_#4DB2E5] cursor-pointer overflow-hidden transition-[all,border-radius] duration-[600ms] ease-[cubic-bezier(0.23,1,0.32,1)] group active:scale-95 active:shadow-[0_0_0_4px_#002B41] hover:rounded-xl hover:text-white hover:shadow-[0_0_0_12px_transparent] bg-primary hover:bg-primary-dark',
		classBg: 'bg-primary',
	},
	secondary: {
		class: 'text-base font-semibold text-[#001930] rounded-[100px] shadow-[0_0_0_2px_#ffffff] cursor-pointer overflow-hidden transition-[all,border-radius] duration-[600ms] ease-[cubic-bezier(0.23,1,0.32,1)] group active:scale-95 active:shadow-[0_0_0_4px_#002B41] hover:rounded-xl hover:text-[#001930] active:text-[#fff] hover:shadow-[0_0_0_12px_transparent] bg-secondary hover:bg-secondary-dark',
		classBg: 'bg-secondary',
	},
	tertiary: {
		class: 'text-white font-semibold text-text rounded-[100px] shadow-[0_0_0_2px_#ffffff] cursor-pointer overflow-hidden transition-[all,border-radius] duration-[600ms] ease-[cubic-bezier(0.23,1,0.32,1)] group active:scale-95 active:shadow-[0_0_0_4px_#002B41] hover:rounded-xl hover:text-text hover:shadow-[0_0_0_12px_transparent] bg-transparent hover:bg-gray-100',
		classBg: 'bg-transparent',
	},
	accent: {
		class: 'text-base font-semibold text-white rounded-[100px] shadow-[0_0_0_2px_#F6B959] cursor-pointer overflow-hidden transition-[all,border-radius] duration-[600ms] ease-[cubic-bezier(0.23,1,0.32,1)] group active:scale-95 active:shadow-[0_0_0_4px_#613E07] hover:rounded-xl hover:text-white hover:shadow-[0_0_0_12px_transparent] bg-accent hover:bg-accent',
		classBg: 'bg-accent',
	},
	'dark-cta': {
		class: 'text-base font-semibold text-[#2e1e00] rounded-[100px] shadow-[0_0_0_2px_#2e1e00] cursor-pointer overflow-hidden transition-[all,border-radius] duration-[600ms] ease-[cubic-bezier(0.23,1,0.32,1)] group active:scale-95 active:shadow-[0_0_0_4px_#fff] hover:rounded-xl hover:text-white active:text-[#fff] hover:shadow-[0_0_0_12px_transparent] bg-transparent hover:bg-[#2e1e00]',
		classBg: 'bg-white',
	},
	'accent-1': {
		class: 'text-base font-semibold text-white rounded-[100px] shadow-[0_0_0_2px_#e85e00] cursor-pointer overflow-hidden transition-[all,border-radius] duration-[600ms] ease-[cubic-bezier(0.23,1,0.32,1)] group active:scale-95 active:shadow-[0_0_0_4px_#e85e00] hover:rounded-xl hover:text-white hover:shadow-[0_0_0_12px_transparent] bg-accent-dark hover:bg-dark',
		classBg: 'bg-accent',
	},
};

const sizesObject = {
	sm: 'px-4 py-2 text-sm gap-2',
	md: 'px-8 py-3 text-base gap-3',
	lg: 'px-10 py-4 text-lg gap-4',
};
---

{
	anchor ? (
		<a class={`${className} ${sizesObject[size]} ${variantsObject[variants].class} w-fit btn relative block border-4 border-transparent`} href={link} title={title} style="--btn-bg: rgba(255, 255, 255, 0.3)" style={`--btn-bg:${variantsObject[variants].classBg}`}>
			<span class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-5 h-5 bg-[var(--btn-bg)] rounded-full opacity-0 transition-all duration-[800ms] ease-[cubic-bezier(0.23,1,0.32,1)] group-hover:w-[300px] group-hover:h-[220px] group-hover:opacity-100" />
			<span class="relative z-10 flex items-center gap-4">{<slot />}</span>
		</a>
	) : (
		<button class={`${className} ${sizesObject[size]} ${variantsObject[variants].class} w-fit btn`} title={title}>
			<span class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-5 h-5 bg-[var(--btn-bg)] rounded-full opacity-0 transition-all duration-[800ms] ease-[cubic-bezier(0.23,1,0.32,1)] group-hover:w-[300px] group-hover:h-[220px] group-hover:opacity-100" />
			<span class="relative z-10 flex items-center gap-1">{<slot />}</span>
		</button>
	)
}
