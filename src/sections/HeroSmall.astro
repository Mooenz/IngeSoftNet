---
export interface Props {
	title: string;
	subtitle?: string;
	classList?: string;
}

const { title, subtitle, classList } = Astro.props;
---

<section class={`relative overflow-hidden px-6 pt-32 pb-10 2xl:pb-28 lg:pt-50 2xl:pt-54 z-10 ${classList}`} id="hero-principal">
	<div class="max-w-3xl mx-auto text-center">
		<h1 class="text-4xl lg:text-6xl font-bold mb-4 text-white">{title}</h1>
		{subtitle && <p class="text-lg text-gray-300">{subtitle}</p>}
	</div>

	<slot />
</section>
