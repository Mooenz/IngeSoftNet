---
import Layout from '@layouts/Layout.astro';
import HeroSmall from '@sections/HeroSmall.astro';
import Documentacion from '@components/documentacion/Documentacion.astro';
import DocumentacionTabs from '@components/documentacion/DocumentacionTabs.astro';
import DocumentacionContent from '@components/documentacion/DocumentacionContent.astro';
import TabSistema from '@components/documentacion/tabs/TabSistema.astro';
import TabArchivos from '@components/documentacion/tabs/TabArchivos.astro';
import TabMovimientos from '@components/documentacion/tabs/TabMovimientos.astro';
import TabProcesos from '@components/documentacion/tabs/TabProcesos.astro';
import TabInformes from '@components/documentacion/tabs/TabInformes.astro';
import TabUtilidades from '@components/documentacion/tabs/TabUtilidades.astro';
import TabAdvertencias from '@components/documentacion/tabs/TabAdvertencias.astro';

const tabs = [
	{ id: 'sistema', label: 'Sistema', icon: 'fi icon fi-tr-api', active: true },
	{ id: 'archivos', label: 'Archivos', icon: 'fi icon fi-tr-folder-open', active: false },
	{ id: 'movimientos', label: 'Movimientos', icon: 'fi icon fi-tr-arrows-repeat', active: false },
	{ id: 'procesos', label: 'Procesos', icon: 'fi icon fi-tr-process', active: false },
	{ id: 'informes', label: 'Informes', icon: 'fi icon fi-tr-file-medical-alt', active: false },
	{ id: 'utilidades', label: 'Utilidades', icon: 'fi icon fi-tr-badge-check', active: false },
	{ id: 'advertencias', label: 'Advertencias', icon: 'fi icon fi-tr-triangle-warning', active: false },
];
---

<Layout title="Manual de Soporte | Asistencia Técnica y Ayuda" description="Manual de Soporte técnico SysCafé: resuelve tus dudas con nuestra documentación completa. Centro de soporte especializado en SysCafé para brindarte asistencia y soluciones efectivas con IngeSoftNet. Soporte disponible para Chocó y Antioquia." keywords="Soporte SysCafé, soporte técnico SysCafé, ayuda SysCafé, asistencia SysCafé, soporte IngeSoftNet, centro de soporte SysCafé, servicio soporte SysCafé, soporte SysCafé Chocó, soporte SysCafé Antioquia.">
	<HeroSmall title="Manual de Soporte" subtitle="Centro de ayuda y documentación para resolver todas tus consultas en el software SysCafé." />

	<Documentacion>
		<DocumentacionTabs tabs={tabs} />
		<DocumentacionContent>
			<TabSistema />
			<TabArchivos />
			<TabMovimientos />
			<TabProcesos />
			<TabInformes />
			<TabUtilidades />
			<TabAdvertencias />
		</DocumentacionContent>
	</Documentacion>
</Layout>
